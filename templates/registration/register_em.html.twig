{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="container my-3">
    <div class="row">
        <div class="col">

            <h1>Inscrivez vous</h1>

            {{ form_errors(registrationFormEm) }}

            {{ form_start(registrationFormEm) }}  
                <fieldset>
                    <legend>Mon Identite</legend>
                    {{ form_row(registrationFormEm.nom) }}
                    {{ form_row(registrationFormEm.prenom) }}
                    {{ form_row(registrationFormEm.email) }}
                </fieldset>
                <fieldset>
                    <legend>Mes Coordonnees</legend>
                    {{ form_row(registrationFormEm.ville) }}
                    {{ form_row(registrationFormEm.adresse) }}
                </fieldset> 
                {{ form_row(registrationFormEm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationFormEm.RGPDConsent,{
                    class:'mt-4 ms-5'
                }) }}
                <fieldset>
                    <legend>Information De L'Entreprise</legend>
                    {{ form_row(registrationFormEm.nomEntreprise) }}
                </fieldset> 

                <button type="submit" class="btn btn-primary mt-4 ms-5">Inscription</button>
                <a href={{ path('app_login') }} class="btn btn-outline-danger mt-4 ms-2">Connexion</a>

            {{ form_end(registrationFormEm) }}
        </div>
    </div>
</section>


{% endblock %}
