{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="container my-3">
    <div class="row">
        <div class="col">

            <h1>Inscrivez vous</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <fieldset>
                    <legend>Mon Identite</legend>
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>
                <fieldset>
                    <legend>Mes Coordonnees</legend>
                    {{ form_row(registrationForm.ville) }}
                    {{ form_row(registrationForm.adresse) }}
                </fieldset> 
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.RGPDConsent,{
                    class:'mt-4 ms-5'
                }) }}

                <button type="submit" class="btn btn-primary mt-4 ms-5">Inscription</button>
                <a href={{ path('app_login') }} class="btn btn-outline-danger mt-4 ms-2">Connexion</a>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</section>


{% endblock %}
