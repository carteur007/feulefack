            </tr>
        </thead>
        <tbody class="tbody">
            {% for element in datapanier %}
                <tr>
                    <td>{{element.packcv.intitule}}</td>
                    <td>{{element.packcv.prix}}</td>
                    <td>{{element.quantite}}</td>
                    <td>{{total}}</td>
                    <td>G</td>
